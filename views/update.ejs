<!DOCTYPE html>

<html>

    <head>

        <title>Update</title>
      <!-- Latest compiled and minified CSS -->
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

      <link rel='stylesheet' href='/stylesheets/style.css' />

      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
      
    </head>

<body>
	<div class="container">

        <div class="col-sm-6 col-sm-offset-0">
            <a href="/profile1"><span class="glyphicon glyphicon-arrow-left" aria-hidden="true" style="height:30px; width:40px;"></span></a>
        </div>

        <div class="col-sm-8 col-sm-offset-2">

            <h1><span class="fa fa-sign-in"></span> Update Yourself</h1>
            <br>
            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
            <% } %>

            <!-- LOGIN FORM -->
            <form action="/api/user_details/<%= user._id %>" method="post">
                
                <div class="form-group">
                    <label>Name</label><br>
                    <div class="row">
                        <div class="col-md-2">
                            <button type="button" class="btn btn-default" id="button1" aria-label="Left Align">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </button>
                        </div>
                        <div class="col-md-6">
                            <input type="text" class="form-control" id="disabletext1" name="name" value="<%= user.name %>">
                        </div>
                    </div>
                </div>
                <script>
                    $( "#disabletext1" ).prop( "disabled", true );
                    $("#button1").click(function(){
                        $( "#disabletext1" ).prop( "disabled", false );
                    });
                </script>
                <br>
                <div class="form-group">
                    <label>Email</label><br>
                    <div class="row">
                        <div class="col-md-2">
                            <button type="button" class="btn btn-default" id="button2" aria-label="Left Align">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </button>
                        </div>
                        <div class="col-md-6">
                            <input type="text" class="form-control" id="disabletext2" name="email" value="<%= user.email %>">
                        </div>
                    </div>
                </div>
                 <script>
                    $( "#disabletext2" ).prop( "disabled", true );
                    $("#button2").click(function(){
                        $( "#disabletext2" ).prop( "disabled", false );
                    });
                </script>
                <br>
                <div class="form-group">
                    <label>Password</label><br>
                    <div class="row">
                        <div class="col-md-2">
                            <button type="button" class="btn btn-default">
                                <span class="glyphicon glyphicon-pencil" id="button3" aria-hidden="true"></span>
                            </button>
                        </div>
                        <div class="col-md-6">
                            <input type="password" class="form-control" id="disabletext3" name="password" value="<%= user.password %>" disabled>
                        </div>
                    </div>
                </div>
                 <script>
                    $( "#disabletext3" ).prop( "disabled", true );
                    $("#button3").click(function(){
                        $( "#disabletext3" ).prop( "disabled", false );
                    });
                </script>
                <br>
                <div class="form-group">
                    <label>Are you Admin ?</label><br>
                    <div class="row">
                        <div class="col-md-2">
                            <button type="button" class="btn btn-default" id="button4" aria-label="Left Align">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </button>
                        </div>
                        <div class="col-md-6">
                            <input type="text" class="form-control" name="admin" id="disabletext4" value="<%= user.admin %>">
                        </div>
                    </div>
                </div>
                 <script>
                    $( "#disabletext4" ).prop( "disabled", true );
                    $("#button4").click(function(){
                        $( "#disabletext4" ).prop( "disabled", false );
                    });
                </script>
                <br>
                    
                <button type="submit" class="btn btn-warning btn-lg">Update</button>

            </form>

            <hr>

        </div>

    </div>
    
</body>

 <style>
    body{
        padding-top:40px;
    }
</style>

</html> 