    <body>

    	<div class="container">

            <div class="col-sm-6 col-sm-offset-0">
                <a href="/profile1"><span class="glyphicon glyphicon-arrow-left" aria-hidden="true" style="height:30px; width:40px;"></span></a>
            </div>   

            <div class="col-sm-6 col-sm-offset-3">

                <h1><span class="fa fa-sign-in"></span>Write Blog</h1>


                <!-- LOGIN FORM -->
                <form action="/blog" method="post" name="form2">
                    <div class="form-group">
                        <label>Hi <%= user.name %>(<%= user.email %>) ! Want to write something .....</label>
                    </div>
                    <div class="form-group">
                        <label>Heading</label>
                        <input type="text" class="form-control" name="heading">
                    </div>
                    <div class="form-group">
                        <label for="comment">Body</label>
                        <textarea class="form-control" rows="5" id="comment" name="desc"></textarea>
                    </div>
                    <button type="submit" class="btn btn-warning btn-lg">Submit</button>
                </form>
                <hr>
            </div>
        </div>

